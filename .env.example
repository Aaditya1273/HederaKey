# =================================
# HEDERAKEY ENVIRONMENT CONFIGURATION
# =================================

# Server Configuration
PORT=8080
NODE_ENV=development
HOST=localhost

# Hedera Network Configuration
HEDERA_NETWORK=testnet
HEDERA_ACCOUNT_ID=0.0.YOUR_ACCOUNT_ID
HEDERA_PRIVATE_KEY=YOUR_HEDERA_PRIVATE_KEY_HERE
HEDERA_MIRROR_NODE=https://testnet.mirrornode.hedera.com

# Database Configuration
DATABASE_URL=postgresql://localhost:5432/hederakey
REDIS_URL=redis://localhost:6379
DB_HOST=localhost
DB_PORT=5432
DB_NAME=hederakey
DB_USER=postgres
DB_PASSWORD=your_password

# API Keys & External Services
UNSTOPPABLE_DOMAINS_API_KEY=your_ud_api_key_here
CHAINLINK_API_KEY=your_chainlink_api_key
INFURA_PROJECT_ID=your_infura_project_id
PINATA_API_KEY=your_pinata_api_key
PINATA_SECRET_KEY=your_pinata_secret

# AI/ML Configuration
AI_MODEL_PATH=./models/fraud_detection_v2.pkl
PYTHON_PATH=/usr/bin/python3
ML_SERVICE_URL=http://localhost:5000

# Privacy & Security
JWT_SECRET=your_super_secret_jwt_key_here
ENCRYPTION_KEY=your_32_character_encryption_key
API_RATE_LIMIT=100
CORS_ORIGIN=http://localhost:3000

# DePIN Network Configuration
DEPIN_NETWORK_ID=hederakey_mainnet
RELAY_NODE_PORT=8081
STAKING_MINIMUM=1000
REWARD_RATE=0.1

# Frontend Configuration
REACT_APP_API_URL=http://localhost:8080
REACT_APP_HEDERA_NETWORK=testnet
REACT_APP_DEMO_MODE=true
REACT_APP_NFC_SIMULATION=true

# Logging & Monitoring
LOG_LEVEL=info
LOG_FILE=./logs/hederakey.log
SENTRY_DSN=your_sentry_dsn_here
ANALYTICS_ID=your_analytics_id

# Development Tools
DEBUG=hederakey:*
WEBPACK_DEV_SERVER_PORT=3000
HOT_RELOAD=true

# Production Settings (uncomment for production)
# NODE_ENV=production
# HEDERA_NETWORK=mainnet
# REACT_APP_DEMO_MODE=false
# LOG_LEVEL=error
